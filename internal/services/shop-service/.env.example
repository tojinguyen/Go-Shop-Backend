# Shop Service Environment Configuration
# Copy this to .env and update the values as needed

# =======================================================
# SHOP SERVICE CONFIGURATION
# =======================================================

# Service Configuration
SHOP_SERVICE_SERVICE_NAME=shop-service
SHOP_SERVICE_SERVICE_PORT=8081
SHOP_SERVICE_SERVICE_HOST=localhost

# Database Configuration (PostgreSQL)
SHOP_SERVICE_POSTGRES_HOST=localhost
SHOP_SERVICE_POSTGRES_PORT=6001
SHOP_SERVICE_POSTGRES_USER=postgres
SHOP_SERVICE_POSTGRES_PASSWORD=your-password-here
SHOP_SERVICE_POSTGRES_DB=shop_service_go_shop_db

# Database Connection Pool Settings
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=25
DB_MAX_LIFETIME=5m
DB_SSL_MODE=disable

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ACCESS_TOKEN_EXPIRY=24h
JWT_REFRESH_TOKEN_EXPIRY=168h

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS Configuration
SHOP_SERVICE_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Application Configuration
ENVIRONMENT=development
APP_VERSION=1.0.0
LOG_LEVEL=info

# Server Timeouts
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=60s
