# =======================================================
# GO-SHOP DEVELOPMENT ENVIRONMENT VARIABLES
# =======================================================

# Project Configuration
COMPOSE_PROJECT_NAME=go-shop-dev
APP_ENV=development
NETWORK_NAME=go-shop-dev-network

# Redis Configuration
REDIS_IMAGE=redis:7-alpine
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_123
REDIS_VOLUME_NAME=redis_dev_data
REDIS_LOG_LEVEL=debug
REDIS_SAVE_INTERVAL=60 1

# Redis Commander (Development)
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin_123

# PostgreSQL Configuration
POSTGRES_IMAGE=postgres:15-alpine
DB_PORT=5432
DB_NAME=go_shop_dev
DB_USER=postgres
DB_PASSWORD=dev_password
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C
POSTGRES_VOLUME_NAME=postgres_dev_data

# PgAdmin (Development)
PGADMIN_DEFAULT_EMAIL=admin@go-shop.dev
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_CONFIG_SERVER_MODE=False

# Services Configuration
USER_SERVICE_PORT=8080
SHOP_SERVICE_PORT=8081
ORDER_SERVICE_PORT=8082
PAYMENT_SERVICE_PORT=8083
SHIPPING_SERVICE_PORT=8084
REVIEW_SERVICE_PORT=8085
NOTIFICATION_SERVICE_PORT=8086

# JWT Configuration
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_EXPIRY=24h

# Logging Configuration
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3
