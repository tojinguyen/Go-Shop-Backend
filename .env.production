# =======================================================
# GO-SHOP PRODUCTION ENVIRONMENT VARIABLES
# =======================================================

# Project Configuration
COMPOSE_PROJECT_NAME=go-shop-prod
APP_ENV=production
NETWORK_NAME=go-shop-prod-network

# Redis Configuration
REDIS_IMAGE=redis:7-alpine
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD_IN_PRODUCTION
REDIS_VOLUME_NAME=redis_prod_data
REDIS_LOG_LEVEL=notice
REDIS_MAX_MEMORY=1gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru
REDIS_SAVE_CONFIG=900 1 300 10 60 10000
REDIS_HEALTH_CHECK_INTERVAL=30s
REDIS_HEALTH_CHECK_TIMEOUT=10s
REDIS_HEALTH_CHECK_RETRIES=3
REDIS_MEMORY_LIMIT=1G
REDIS_CPU_LIMIT=1.0
REDIS_MEMORY_RESERVATION=512M
REDIS_CPU_RESERVATION=0.5

# PostgreSQL Configuration
POSTGRES_IMAGE=postgres:15-alpine
DB_PORT=5432
DB_NAME=go_shop_prod
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_DB_PASSWORD_IN_PRODUCTION
POSTGRES_INITDB_ARGS=--encoding=UTF-8 --lc-collate=C --lc-ctype=C
POSTGRES_VOLUME_NAME=postgres_prod_data

# PostgreSQL Performance Settings (Production)
POSTGRES_MAX_CONNECTIONS=100
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB

# Services Configuration
USER_SERVICE_PORT=8080
SHOP_SERVICE_PORT=8081
ORDER_SERVICE_PORT=8082
PAYMENT_SERVICE_PORT=8083
SHIPPING_SERVICE_PORT=8084
REVIEW_SERVICE_PORT=8085
NOTIFICATION_SERVICE_PORT=8086

# JWT Configuration
JWT_SECRET=CHANGE_THIS_JWT_SECRET_IN_PRODUCTION_MAKE_IT_VERY_LONG_AND_SECURE
JWT_EXPIRY=1h

# Logging Configuration
LOG_MAX_SIZE=50m
LOG_MAX_FILE=5
