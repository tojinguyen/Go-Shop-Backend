# Production Environment Variables Example
# Copy this file to .env and update values as needed

# Redis Configuration (Production)
REDIS_IMAGE=redis:7-alpine
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_STRONG_REDIS_PASSWORD_HERE
REDIS_MAX_MEMORY=1gb
REDIS_MAX_MEMORY_POLICY=allkeys-lru
REDIS_SAVE_CONFIG=900 1 300 10 60 10000

# Health Check Configuration
REDIS_HEALTH_CHECK_INTERVAL=30s
REDIS_HEALTH_CHECK_TIMEOUT=10s
REDIS_HEALTH_CHECK_RETRIES=3

# Resource Limits
REDIS_MEMORY_LIMIT=1G
REDIS_CPU_LIMIT=1.0
REDIS_MEMORY_RESERVATION=512M
REDIS_CPU_RESERVATION=0.5

# Logging Configuration
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# Environment
APP_ENV=production
COMPOSE_PROJECT_NAME=go-shop-prod

# Network Configuration
NETWORK_NAME=go-shop-prod-network

# Volume Configuration  
REDIS_VOLUME_NAME=redis_prod_data

# Service Ports Configuration (for future services)
USER_SERVICE_PORT=8000
ORDER_SERVICE_PORT=8001
PAYMENT_SERVICE_PORT=8002
NOTIFICATION_SERVICE_PORT=8003
REVIEW_SERVICE_PORT=8004
SHIPPING_SERVICE_PORT=8005
SHOP_SERVICE_PORT=8006

# Database Configuration (for future PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=YOUR_STRONG_DB_PASSWORD_HERE
DB_NAME=go_shop_prod

# JWT Configuration
JWT_SECRET=YOUR_VERY_STRONG_JWT_SECRET_KEY_HERE
JWT_EXPIRES_IN=24h
