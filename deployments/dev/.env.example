# Development Environment Variables Example
# Copy this file to .env and update values as needed

# Redis Configuration (Development)
REDIS_IMAGE=redis:7-alpine
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_LOG_LEVEL=verbose
REDIS_SAVE_INTERVAL=60 1

# Redis Commander (Development UI)
REDIS_COMMANDER_PORT=8081
REDIS_COMMANDER_USER=admin
REDIS_COMMANDER_PASSWORD=admin123

# Environment
APP_ENV=development
COMPOSE_PROJECT_NAME=go-shop-dev

# Network Configuration
NETWORK_NAME=go-shop-dev-network

# Volume Configuration
REDIS_VOLUME_NAME=redis_dev_data

# Service Ports Configuration (for future services)
USER_SERVICE_PORT=8000
ORDER_SERVICE_PORT=8001
PAYMENT_SERVICE_PORT=8002
NOTIFICATION_SERVICE_PORT=8003
REVIEW_SERVICE_PORT=8004
SHIPPING_SERVICE_PORT=8005
SHOP_SERVICE_PORT=8006

# Database Configuration (for future PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=go_shop_dev

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_dev
JWT_EXPIRES_IN=24h
